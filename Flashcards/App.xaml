    <Application.Resources>
        <system:String x:Key="ApplicationName">FLASHCARDS</system:String>

        <DataTemplate x:Key="viewBoxTitleTemplate">
            <Viewbox HorizontalAlignment="Left" StretchDirection="DownOnly">
